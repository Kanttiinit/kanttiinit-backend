doctype html
html(lang='en')
   head
      meta(charset='UTF-8')
      meta(name="viewport" content="width=device-width, initial-scale=1")
      title= restaurant.name
      link(href='https://fonts.googleapis.com/css?family=Lato:400,300,700' rel='stylesheet' type='text/css')
      style.
         * {
            margin: 0;
            padding: 0;
         }
         
         html, body {
            background: #eee;
            font-family: "Lato", sans-serif;
            font-size: 11pt;
         }
         
         body {
            width: #{width}px;
         }
         
         header {
            background: #3C9F92;
            color: white;
            padding: 0.5em;
            display: -webkit-flex;
            -webkit-align-items: center;
            box-shadow: 0 0.2em 0.3em -0.1em rgba(0, 0, 0, 0.4);
         }
         
         .left {
            -webkit-flex: 1;
         }
         
         h1 {
            font-weight: normal;
            font-size: 1.5em;
         }
         
         .date {
            color: rgba(255, 255, 255, 0.75);
         }
         
         .opening-hours {
            color: rgba(255, 255, 255, 0.75);
         }
         
         ul {
            list-style-type: none;
         }
         
         li {
            padding: 0.4em;
            display: -webkit-flex;
            -webkit-align-items: center;
            color: #444;
         }
         
         li:nth-child(even) {
            background: #f5f5f5;
         }
         
         .title {
            -webkit-flex: 1;
         }
         
         .properties {
            display: -webkit-flex;
         }
         
         .property {
            margin: 0 0.2em;
            color: white;
            border-radius: 50%;
            font-size: 0.7em;
            vertical-align: 0.1em;
            width: 1.6em;
            height: 1.6em;
            display: -webkit-flex;
            -webkit-align-items: center;
            -webkit-justify-content: center;
            border: solid 0.2em;
            font-weight: bold;
            overflow: hidden;
         }
         
         .empty {
            padding: 1em;
            text-align: center;
            font-weight: 300;
         }
   body
      header
         .left
            h1= restaurant.name
            span.date= date
         .right
            span.opening-hours= openingHours
      ul
         if courses.length
            each course in courses
               li
                  .title= course.title
                  .properties
                     each property in course.properties
                        span.property(style="color: " + getColor(property) + ";")= property
         else
            .empty Ei ruokalistoja tälle päivälle.
