{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "title": "User Preferences",
   "type": "object",
   "additionalProperties": "false",
   "properties": {
      "useLocation": {
         "type": "boolean"
      },
      "lang": {
        "enum": ["fi", "en"]
      },
      "selectedArea": {
         "type": "integer"
      },
      "starredRestaurants": {
        "type": "array",
        "items": {
          "type": "integer"
        },
        "maxItems": 50,
        "uniqueItems": true
      },
      "favorites": {
        "type": "array",
        "items": {
          "type": "integer"
        },
        "maxItems": 50,
        "uniqueItems": true
      },
      "order": {
        "enum": ["ORDER_AUTOMATIC", "ORDER_ALPHABET", "ORDER_DISTANCE"]
      }
   }
}
