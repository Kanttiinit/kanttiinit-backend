{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "title": "Menu",
   "description": "One day-specific menu of a restaurant.",
   "type": "object",
   "properties": {
      "day": {
         "description:": "The date as YYYY-MM-DD.",
         "type": "string"
      },
      "courses": {
         "description": "An array of all menu items.",
         "type": "array",
         "items": {
            "type": {
               "$ref": "#/definitions/course"
            }
         }
      }
   },
   "definitions": {
      "course": {
         "type": "object",
         "properties": {
            "title": {
               "type": "string"
            },
            "properties": {
               "type": "array",
               "items": {
                  "type": "string"
               }
            }
         }
      }
   }
}
